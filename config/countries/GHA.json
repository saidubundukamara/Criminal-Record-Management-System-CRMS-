      "Inspector General of Police (IGP)",
      "Deputy Inspector General (DIG)",
      "Commissioner of Police (COP)",
      "Assistant Commissioner (ACOS)",
      "Superintendent",
      "Inspector",
      "Sergeant",
      "Corporal",
      "Constable"
    ]
  },

  "legalFramework": {
